<div class="connexion">
	<h1>Connexion</h1>
	<% flash.each do |name, msg| %>
		<p class= "alert alert-<%= name%>"><%= msg %></p> 
	<% end %>
	<%= form_tag '/registration/verif', method: 'POST' do %>
		<%= label_tag 'First name'%>
		<%= text_field_tag 'first_name','',:class => 'form-control'%>
		<%= label_tag 'Mot de passe'%>
		<%= password_field_tag 'password','',:class => 'form-control'%>
		<%= submit_tag 'Connexion',:class => 'btn btn-success'%>
	<% end %>
	<a href="<%= new_registration_path %>">Aviez-vous d√©ja un compte?</a>
</div>
