<div class="connexion">
	<h1>Log Up</h1>
	<% flash.each do |name, msg| %>
		<p class= "alert alert-<%= name%>"><%= msg %></p> 
	<% end %>
	<%= form_tag '/registration', method: 'POST' do %>
	<%= label_tag 'First name'%>
	<%= text_field_tag 'first_name','',:class => 'form-control'%>
	<%= label_tag 'Mot de passe'%>
	<%= password_field_tag 'password','',:class => 'form-control'%>
	<%= label_tag 'Confirmation de mot de passe'%>
	<%= password_field_tag 'password_confirm','',:class => 'form-control'%>
	<%= submit_tag 'Enregistrer',:class => 'btn btn-success'%>
	<% end %>
</div>